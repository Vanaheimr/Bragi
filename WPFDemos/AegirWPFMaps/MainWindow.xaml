<Window xmlns:Aegir = "clr-namespace:de.ahzf.Vanaheimr.Aegir.Controls;assembly=AegirMapControl"
        x:Class     = "de.ahzf.Bragi.AegirWPFMaps.MainWindow"
        xmlns       = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x     = "http://schemas.microsoft.com/winfx/2006/xaml"
        Title       = "Aegir WPF Maps"
        Height      = "550"
        Width       = "900">

    <TabControl Name="TabControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TabItem Name="MapTab" Header="Aegir Map">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*"  />
                    <RowDefinition Height="15" />
                </Grid.RowDefinitions>

                <Border Name                = "MapSearchBorder"
                        Grid.Row            = "0"
                        CornerRadius        = "2"
                        Margin              = "4,3,0,0"
                        Width               = "350"
                        Height              = "23"
                        Padding             = "3,0,0,0"
                        HorizontalAlignment = "Left"
                        BorderThickness     = "1" >

                    <TextBox Name                = "MapSearchBox"
                             Padding             = "0"
                             BorderThickness     = "0"
                             HorizontalAlignment = "Stretch"
                             VerticalAlignment   = "Center"
                             Background          = "Transparent"
                             Text                = "search: latitude longitude zoomlevel"
                             KeyUp               = "MapSearchBox_ProcessInput"
                             GotFocus            = "MapSearchBox_GotFocus"
                             LostFocus           = "MapSearchBox_LostFocus" />

                </Border>

                <Aegir:MapControl Name                = "MapControl"
                                  Margin              = "4,0,4,0"
                                  Grid.Row            = "1"
                                  Background          = "White"
                                  ClipToBounds        = "True"
                                  SnapsToDevicePixels = "True" />


                <TextBlock Grid.Row="2" Name="DisplayOffsetTextBlock" Margin="10,0, 0,0" Height="23" HorizontalAlignment="Left"  Text="Offset:"    TextAlignment="Left" VerticalAlignment="Top" />
                <TextBlock Grid.Row="2" Name="GeoPositionTextBlock"   Margin=" 0,1,10,0" Height="23" HorizontalAlignment="Right" VerticalAlignment="Top" TextAlignment="Right" Text="Pos: X, Y" />

            </Grid>

        </TabItem>

        <TabItem Name="GraphTab" Header="Semantics">
            <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
                <Path Data="M106,13c-21,9-31,4-40-2l-10,35c9,6,20,11,40,2l10-35z"              Fill="#7B4"/>
                <Path Data="M39,83c-9-6-18-10-39-2l10-35c21-9,31-4,39,2l-10,35z "              Fill="#49c"/>
                <Path Data="M51,42c-5-4-11-7-19-7c-6,0-12,1-20,5l10-35c20-8,30-4,39,2l-10,35z" Fill="#E63"/>
                <Path Data="M55,52c9,6,18,10,39,2l-10,35c-21,8-30,3-39-3l10-34z"               Fill="#FD5"/>
            </Canvas>
        </TabItem>

    </TabControl>

</Window>
